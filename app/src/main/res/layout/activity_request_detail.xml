<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDetailActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="37dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/left" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grayColor"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:backgroundTint="@color/whiteColor"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etPickupLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1.0"
                                    android:background="@null"
                                    android:editable="false"
                                    android:ems="10"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:hint="Pickup Location"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="6dp"
                                    tools:ignore="ExtraText">

                                    <requestFocus />

                                </EditText>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:backgroundTint="@color/whiteColor"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etWhereTo"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1.0"
                                    android:background="@null"
                                    android:editable="false"
                                    android:ems="10"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:hint="Where To?"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="6dp"
                                    tools:ignore="ExtraText">

                                    <requestFocus />

                                </EditText>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="#ADCCE2" />

                                <TextView
                                    android:id="@+id/btnStartRide"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="#008000"
                                    android:gravity="center"
                                    android:padding="16dp"
                                    android:text="Start Ride"
                                    android:textColor="#fff"
                                    android:textSize="16dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="#ADCCE2" />

                                <TextView
                                    android:id="@+id/btnStopRide"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="#ff0000"
                                    android:gravity="center"
                                    android:padding="16dp"
                                    android:text="Stop Ride"
                                    android:textColor="#fff"
                                    android:textSize="16dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="#ADCCE2" />

                                <EditText
                                    android:id="@+id/etPassenger_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1.0"
                                    android:background="@null"
                                    android:editable="false"
                                    android:ems="10"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:hint="Where To?"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="6dp"
                                    tools:ignore="ExtraText">

                                </EditText>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="#ADCCE2" />

                                <EditText
                                    android:id="@+id/etRequested_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1.0"
                                    android:background="@null"
                                    android:editable="false"
                                    android:ems="10"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:hint="Where To?"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="6dp"
                                    tools:ignore="ExtraText">

                                </EditText>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="#ADCCE2" />

                                <EditText
                                    android:id="@+id/etRequest_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1.0"
                                    android:background="@null"
                                    android:editable="false"
                                    android:ems="10"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:hint="Where To?"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="6dp"
                                    tools:ignore="ExtraText">

                                </EditText>
                            </LinearLayout>


                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>